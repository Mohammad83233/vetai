# VetAI Backend Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=VetAI Clinical Decision Support
APP_VERSION=1.0.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=vetai

# JWT Authentication (CHANGE IN PRODUCTION!)
SECRET_KEY=vetai-secret-key-change-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Token System
TOKEN_PREFIX=VET
TOKENS_PER_DAY_RESET=True

# AI Models
WHISPER_MODEL=base
NLP_MODEL=en_core_web_sm

# File Upload
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=50
UPLOAD_DIR=./uploads

# Optional: Gemini Vision API (free tier, for enhanced image analysis)
GEMINI_API_KEY=
